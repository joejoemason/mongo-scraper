<button class="btn btn-default scrape">SCRAPE!</button><button class="btn btn-warning saved">SAVED</button>

<h1>Science News</h1>

<div class="articles">
    {{#each_upto articles 8}}
        {{#unless saved}}
        <div class="article">
            <img src="{{image}}" style="height:100px;">
            <a href="{{link}}"><h2>{{title}}</h2></a>
            <p>{{summary}}</p>
            <button class="btn btn-primary save" data-id="{{_id}}">SAVE</button>
            <br>
        </div>
        {{/unless}}
    {{/each_upto}}
</div>



